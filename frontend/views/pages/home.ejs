<%- include ../layout/header %>


        <!-- End Offset Wrapper -->
        <section class="htc__category__area ptb--100">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="section__title--2 text-center">
                            <h2 class="title__line">New Arrivals</h2>
                        </div>
                    </div>
                </div>
                <div class="htc__product__container">
                    <div class="row">
                        <div class="product__list clearfix mt--30">
                            <!-- Start Single Category -->
                            <% if(products.length>0){
                                products.forEach((product)=>{ %>

                                <div class="col-md-4 col-lg-3 col-sm-4 col-xs-12">
                                    <div class="category">
                                        <div class="ht__cat__thumb">
                                            <a href="javascript:void(0)">
                                                <img src="/imgpath/<%= product.productImage.file %>" alt="product images">
                                            </a>
                                        </div>
                                        <div class="fr__hover__info">
                                            <ul class="product__action">
                                                <li class="addProduct" data-productid=<%= product._id %>><a href="javascript:void(0)"><i
                                                            class="icon-handbag icons"></i></a></li>
                                            </ul>
                                        </div>
                                        <div class="fr__product__inner">
                                            <h4><a href="javascript:void(0)"><%= product.productName %>(<%= product.gender %>)</a></h4>
                                            <ul class="fr__pro__prize">
                                                <li class="old__prize"><strike>$<%= product.productPrice %></strike> </li>
                                                <li>$ <%- JSON.stringify(product.discountPrice) %></li>
                                                
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <% }) %>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </section>
		<%- include ../layout/footer %>